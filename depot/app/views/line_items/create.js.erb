<%
# Used also on action line_item/destroy 
bgcolor = @destroy ? '#FF0000' : '#88ff88'
%>
function highlight_item(){
	$('#current_item').css({'background-color':'<%=bgcolor%>'}).
	animate({'background-color':'#114411'}, 1000);
}

function reload_cart(callback) {
	$('#cart').html("<%= j render @cart %>");
	highlight_item();
}
if ($('#cart tr').length == 1) { 
	$('#cart').show('blind', 1000, reload_cart); 
}
else {
  reload_cart();
}

